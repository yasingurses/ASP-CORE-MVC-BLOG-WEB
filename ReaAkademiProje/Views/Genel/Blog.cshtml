@using EntityLayer.Concrete
@model List<Blog>


<div class="about_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-sm-12">
                @foreach (var item in Model)
               {
                    
                    <br />
                    <div class="about_img mt-4"><img src="@item.blog_image" width="400" height="200"></div>
                    <br />
                    <div class="like_icon"><img src="~/bloscot-master/images/like-icon.png"></div>
                    <br />
                    <p class="post_text">Post By : @item.blog_Date.ToString("dd-MMM-yyyy")</p>
                    <br />
                    <h2 class="most_text">@item.blog_Title</h2>
                    <br />
                    <p class="lorem_text">@item.blog_Content</p>
                    <br />
                }
                <div class="social_icon_main">
                    <div class="social_icon">
                        <ul>
                            <li><a href="#"><img src="~/bloscot-master/images/fb-icon.png"></a></li>
                            <li><a href="#"><img src="~/bloscot-master/images/twitter-icon.png"></a></li>
                            <li><a href="#"><img src="~/bloscot-master/images/instagram-icon.png"></a></li>
                        </ul>
                    </div>
                    <div class="read_bt"><a href="#">Read More</a></div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12">
                <div class="about_main">
                    <h1 class="follow_text">CONNECT & FOLLOW</h1>
                    <div class="follow_icon">
                        <ul>
                            <li><a href="#"><img src="~/bloscot-master/images/fb-icon-1.png"></a></li>
                            <li><a href="#"><img src="~/bloscot-master/images/twitter-icon-1.png"></a></li>
                            <li><a href="#"><img src="~/bloscot-master/images/linkedin-icon-1.png"></a></li>
                            <li><a href="#"><img src="~/bloscot-master/images/instagram-icon-1.png"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- blog section end -->
