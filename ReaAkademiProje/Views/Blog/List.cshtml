@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Blog Listesi</h1>
<h1>TAKIM LİSTESİ</h1>
<div><a asp-action="Ekle" asp-controller="Blog" class="btn btn-primary">Blog Ekle</a></div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Default Table</h5>

                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Blog ID</th>
                                <th scope="col">Blog Adı</th>
                                <th scope="col">Blog İçeriği </th>
                                <th scope="col">Blog Başlığı </th>
                                <th scope="col">Blog Resmi </th>
                                <th scope="col">Blog Yazılış Tarihi </th>
                                <th scope="col">İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in Model)
                            {
                                <tr>
                                    <td>@a.blog_ID</td>
                                    <td>@a.blog_Name</td>
                                    <td>@a.blog_Content</td>
                                    <td>@a.blog_Title</td>
                                    <td>@a.blog_image</td>
                                    <td>@a.blog_Date</td>

                                    <td>
                                        <a onclick="return confirm('Silmek istediğinize eminmisiniz?');" asp-controller="Blog" asp-action="Sil" asp-route-id="@a.blog_ID" class="btn btn-danger">sil</a>

                                        <a asp-controller="Blog" asp-action="Guncelle" asp-route-id="@a.blog_ID" class="btn btn-warning">Güncelle</a>
                                    </td>
                                    <td>
                                    </td>


                                </tr>
                            }

                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>

        </div>

    </div>
</section>

